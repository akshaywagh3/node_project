{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict" : true,
    "module" : "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2022"],
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true
  }
}